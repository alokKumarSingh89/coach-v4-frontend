{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types", "lib/types"],
    "lib": ["dom", "es2015", "es2016"],
    "paths": {
      "components/*": ["components/*"],
      "containers/*": ["containers/*"],
      "lib/*": ["lib/*"],
      "pages/*": ["pages/*"],
      "server/*": ["server/*"],
      "static/*": ["static/*"],
      "tests/*": ["tests/*"],
      "theme/*": ["theme/*"]
    }
  }
}
